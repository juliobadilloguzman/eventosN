<!DOCTYPE html>
<html lang="en">

<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- Meta -->
	<meta name="description" content="Premium Quality and Responsive UI for Dashboard.">
	<meta name="author" content="ThemePixels">

	<title>Slim Responsive Bootstrap 4 Admin Template</title>

	<!-- vendor css -->
	<link href="css/font-awesome.css" rel="stylesheet">
	<link href="css/Ionicons/css/ionicons.css" rel="stylesheet">
	<link href="css/rickshaw.min.css" rel="stylesheet">

	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
		integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">

	<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

	<!-- Slim CSS -->
	<link rel="stylesheet" href="css/slim.css">

</head>

<body>
	<div class="slim-header">
		<div class="container">
			<div class="slim-header-left">
				<h2 class="slim-logo"><a href="/">Eventos Morelos<span></span></a></h2>


			</div><!-- slim-header-left -->
			<div class="slim-header-right">

				<div class="dropdown dropdown-c">
					<a href="#" class="logged-user" data-toggle="dropdown">

						<span>{{usuario.nombre}}</span>
						<i class="fa fa-angle-down"></i>
					</a>
					<div class="dropdown-menu dropdown-menu-right">
						<nav class="nav">

							<a href="/logout" class="nav-link"><i class="icon ion-forward"></i>Cerrar
								Sesi√≥n</a>
						</nav>
					</div><!-- dropdown-menu -->
				</div><!-- dropdown -->
			</div><!-- header-right -->
		</div><!-- container -->
	</div><!-- slim-header -->

	<div class="slim-navbar">
		<div class="container">
			<ul class="nav">



				<li class="nav-item">
					<a class="nav-link" href="/dashboardU">
						<i class="icon ion-ios-chatboxes-outline"></i>
						<span>Usuarios</span>

					</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="/dashboardE">
						<i class="icon ion-ios-analytics-outline"></i>
						<span>Eventos</span>
					</a>
				</li>
			</ul>
		</div><!-- container -->
	</div><!-- slim-navbar -->

	<div class="slim-mainpanel">
		<div class="container">
			<div class="slim-pageheader">
				<ol class="breadcrumb slim-breadcrumb">
					<li class="breadcrumb-item"><a href="#">Inicio</a></li>
					<li class="breadcrumb-item active" aria-current="page">Eventos</li>
				</ol>
				<h6 class="slim-pagetitle">Eventos</h6>
			</div><!-- slim-pageheader -->

			{{!-- PANTALLA 1: DISPLAY USUARIO --}}
			<div class="row" id="pantalla-displayUsuarios">
				<div class="col-12">
					<div class="card">
						<div class="card-body">


							<a href="/agregarEvento" class="btn btn-primary mb-3" id="btn-agregarUsuario">Agregar
								Evento</a>

							<div class="card-group row" style="width:100% !important">
								{{#each eventos}}
								<div class="col-4 mt-3">
									
									<div class="card m-2">
										<img src="http://localhost:3000/images/upload_images/{{this.imagen}}"
											width="280" height="180" class="card-img-top" alt="...">
										<div class="card-body">
											<h5 class="card-title">{{this.titulo}}</h5>
											<p class="card-text">{{this.descripcion}}</p>
											<button class="btn-editarEvento btn btn-success" value="{{this.id}}"
												data-toggle="modal" data-target="#modalEditar">Editar</button>
											<button class="btn-eliminarEvento btn btn-danger"
												value="{{this.id}}">Eliminar</button>
										</div>
									</div>
									
								</div>
								{{/each}}
								<input type="hidden" id="idEvento">
							</div>


						</div><!-- section-wrapper -->
					</div>
				</div>
			</div>



		</div>

	</div><!-- row -->

	<!-- BASIC MODAL -->
	<div id="modalEditar" class="modal fade">
		<div class="modal-dialog modal-dialog-vertical-center modal-lg" role="document">
			<div class="modal-content bd-0 tx-14">
				<div class="modal-header">
					<h6 class="tx-14 mg-b-0 tx-uppercase tx-inverse tx-bold">Message Preview</h6>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">


					<h4>Editar evento</h4>
					<p>________________________________________________________________</p>

					<div class="row mt-3">
						<div class="col-12">
							<img src="" alt="" id="editar-imagen" width="300" height="180">
						</div>
					</div>

					<input class="form-control" type="file" id="imagen" name="imagen">

					{{!-- Titulo --}}
					<label for="nombre">Titulo</label>
					<input type="text" class="form-control mb-2" id="editar-titulo" name="titulo"
						placeholder="Ingresa Titulo">

					{{!-- Descripcion --}}
					<label for="nombre">Descripcion</label>
					<textarea class="form-control" name="descripcion" id="editar-descripcion"></textarea>

					{{!-- Fecha realizacion --}}
					<label>Fecha de realizacion</label>
					<input type="date" class="form-control" id="editar-fechaRealizacion" name="fechaRealizacion">

					<label>Lugar</label>
					<select class="form-control mb-2" name="lugar" id="editar-lugar">
						{{#each lugares}}
						<option value="{{this.id}}">{{this.nombre}}</option>
						{{/each}}
					</select>



				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-primary" id="btn-Patch">Guardar Cambios</button>
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
				</div>
			</div>
		</div><!-- modal-dialog -->
	</div><!-- modal -->



	</div><!-- container -->
	</div><!-- slim-mainpanel -->

	<div class="slim-footer">
		<div class="container">
			<p>Copyright 2018 &copy; All Rights Reserved. Eventos Morelos</p>

		</div><!-- container -->
	</div><!-- slim-footer -->

	<script src="js/jquery.js"></script>
	<script src="js/popper.js"></script>
	<script src="js/bootstrap.min.js"></script>

	<script src="js/ResizeSensor.js"></script>
	{{!-- <script src="js/dashboard.js"></script> --}}
	<script src="js/slim.js"></script>
	{{!-- <script src="js/app.js"></script> --}}
	<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment-with-locales.js"></script>
	<script src="js/appEventos.js"></script>

</body>

</html>