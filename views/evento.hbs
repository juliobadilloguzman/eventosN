<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Turismo Morelos</title>
    <link rel="stylesheet" href="http://localhost:3000/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="http://localhost:3000/css/styles.css" type="text/css">
    <link rel="stylesheet" href="http://localhost:3000/css/mdb.min.css" type="text/css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
        integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">


</head>

<body>

    <header>

        <!--Navbar-->
        <nav class="mb-1 navbar navbar-expand-lg navbar-dark fixed-top scrolling-navbar">
            <a class="navbar-brand" href="/">
                <img src="http://localhost:3000/img/logod.png" height="33" alt="mdb logo">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse"
                data-target="#navbarSupportedContent-333" aria-controls="navbarSupportedContent-333"
                aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent-333">
                <ul class="navbar-nav mr-auto smooth-scroll">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Inicio
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Eventos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contacto</a>
                    </li>

                </ul>

                <ul class="navbar-nav ml-auto nav-flex-icons">
                    {{#if usuario}}
                    <a href="/dashboardU" class="btn btn-info">Panel de Control</a>
                    <a href="/logout" class="btn btn-danger">Cerrar Sesión</a>
                    {{else}}
                    <a href="/login" class="btn btn-success">Iniciar Sesion</a>
                    {{/if}}
                </ul>

            </div>
        </nav>
        <!--/.Navbar-->


        <div id="intro" class="view">

            <div class="mask rgba-black-strong">

                <div class="container-fluid d-flex align-items-center justify-content-center h-100">

                    <div class="row d-flex justify-content-center text-center">

                        <div class="col-md-12">

                            <!-- Titulo grande -->
                            <h2 class="display-4 font-weight-bold white-text pt-5 mb-2">DESCUBRE MORELOS</h2>

                            <!-- Divider -->
                            <hr class="hr-light">

                            <!-- Mini descripcion -->
                            <h4 class="white-text my-4">La aventura más emocionante la encontrarás en Morelos.</h4>


                            <!-- Boton e input buscar -->
                            <div class="row d-flex justify-content-center text-center">
                                <div class="col-xl-8 col-lg-8 col-md-8 col-xs-12 col-12">
                                    <input type="text" id="input-buscar" class="form-control mt-2"
                                        placeholder="¿Que hacer? ¿A donde ir?">
                                </div>
                                <div class="col-xl-4 col-lg-4 col-md-4 col-xs-12 col-12">
                                    <button type="button" id="btn-buscar" class="btn btn-outline-white">Buscar</button>
                                </div>
                            </div>

                        </div>

                    </div>



                </div>

            </div>

        </div>


    </header>


    <!--Main layout-->
    <main class="mt-5">

        <hr class="my-5">

        <!-- Section: contact -->
        <div class="container-fluid">
            <section id="contact">

                {{#each evento}}
                <!-- Heading -->
                <div class="row justify-content-center text-center mb-4">
                    <div class="col-5 bg-secondary">

                        <h2 class="mb-1 mt-2 font-weight-bold text-white">{{this.titulo}}</h2>

                    </div>
                </div>

                <div class="row justify-content-center text-center">
                    <div class="col-12">
                        <img class="shadow" src="http://localhost:3000/images/upload_images/{{this.imagen}}" alt="">
                    </div>
                </div>



                <div class="row justify-content-center mt-5">
                    <div class="col-8">
                        <p style="text-align:justify">{{this.descripcion}}</p>
                    </div>
                </div>

                <hr class="my-5">

                <div class="row justify-content-center text-center">
                    <div class="col-8">
                        <span class="text-success" style="font-weight:600">Fecha de realizacion: </span> <span
                            style="">{{this.fechaRealizacion}}</span>
                    </div>
                </div>

                <hr class="my-5">
                {{/each}}

            </section>
        </div>


    </main>
    <!--Main layout-->


    <!-- Footer -->
    <footer class="page-footer font-small pt-4 text-muted">

        <!-- Footer Links -->
        <!--Footer Links-->
        <div class="container mt-5 mb-4 text-center text-md-left">
            <div class="row mt-3">

                <!--First column-->
                <div class="col-md-3 col-lg-4 col-xl-3 mb-4">
                    <h6 class="text-uppercase font-weight-bold">
                        <strong>Eventos Morelos</strong>
                    </h6>
                    <hr class="deep-purple accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
                    <p>Morelos se destaca por ser uno de los estados mas multiculturales del mundo, descubre todo lo que
                        puedes hacer aquí, desde conciertos, carnavales, hasta eventos familiares.</p>
                </div>
                <!--/.First column-->



                <!--Third column-->
                <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4 text-muted">
                    <h6 class="text-uppercase font-weight-bold">
                        <strong>Ejemplo</strong>
                    </h6>
                    <hr class="deep-purple accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
                    <p>
                        <a class="text-muted" href="#!">Inicio</a>
                    </p>
                    <p>
                        <a class="text-muted" href="#!">Eventos</a>
                    </p>
                    <p>
                        <a class="text-muted" href="#!">Contacto</a>
                    </p>
                </div>
                <!--/.Third column-->

                <!--Fourth column-->
                <div class="col-md-4 col-lg-3 col-xl-3">
                    <h6 class="text-uppercase font-weight-bold">
                        <strong>Contacto</strong>
                    </h6>
                    <hr class="deep-purple accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
                    <p>
                        <i class="fas fa-home  mr-3"></i> Morelos, Ejemplo 10012, US</p>
                    <p>
                        <i class="fas fa-envelope mr-3"></i> eventosMorelos@example.com</p>
                    <p>
                        <i class="fas fa-phone mr-3"></i> + 01 234 567 88</p>
                    <p>
                        <i class="fas fa-print mr-3"></i> + 01 234 567 89</p>
                </div>
                <!--/.Fourth column-->

            </div>
        </div>
        <!--/.Footer Links-->
        <!-- Footer Links -->

        <!-- Copyright -->
        <div class="footer-copyright text-center py-3 bg-secondary">© 2018 Copyright:
            <a href="#"> www.eventosmorelos.com</a>
        </div>
        <!-- Copyright -->

    </footer>
    <!-- Footer -->

    <script src="http://localhost:3000/js/jquery.js"></script>
    <script src="http://localhost:3000/js/bootstrap.min.js"></script>
    <script src="http://localhost:3000/js/mdb.min.js"></script>
    <script src="http://localhost:3000/js/effects.js"></script>
    <script src="http://localhost:3000/js/jquery.countdown.min.js"></script>

</body>

</html>
